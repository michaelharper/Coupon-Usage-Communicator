<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <dataSource name="sales_rule_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">MichaelHarper\CouponUsageCommunicator\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">sales_rule_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">rule_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
    </dataSource>
    <fieldset name="rule_information">
        <fieldset name="coupon_usage_communicator" sortOrder="1000">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Coupon Usage Communication</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
            <field name="coupon_usage_communicator_enable">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="label" xsi:type="string" translate="true">Email coupon usage communication</item>
                        <item name="dataScope" xsi:type="string">coupon_usage_communicator_enable</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
            </field>
            <field name="coupon_usage_communicator_emails">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="label" xsi:type="string" translate="true">Email(s)</item>
                        <item name="dataScope" xsi:type="string">coupon_usage_communicator_emails</item>
                        <item name="visible" xsi:type="boolean">true</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="notice" xsi:type="string" translate="true">Separate multiple email addresses with commas.</item>
                    </item>
                </argument>
                <settings>
                    <imports>
                        <link name="visible">${ $.provider }:${ $.parentScope }.coupon_usage_communicator_enable</link>
                    </imports>
                </settings>
            </field>
        </fieldset>
    </fieldset>
</form>
